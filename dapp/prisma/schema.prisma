// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Use the PostgreSQL provider instead of MongoDB
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Use the appropriate data types for PostgreSQL
model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  name       String?
  avatar     String?
  createdAt  DateTime @default(now()) @db.Timestamp(6) // Adjust the precision based on your needs
  verified   Boolean  @default(false)
  filledForm Boolean  @default(false)
}


model Campaign {
  id              Int           @id @default(autoincrement())
  uuid            String        @unique
  ownerId         Int           
  title           String
  description     String
  category        CampaignCategory
  image           String?
  video           String?
  goal            String
  collected       String        @default("0")
  type            CampaignType
  createdAt       DateTime      @default(now())
  endAt           DateTime      
  updatedAt       DateTime      @updatedAt
  owner           Owner         @relation(fields: [ownerId], references: [id])
  contributers    Contributer[]
  rewards         Reward[]
  isFinished      Boolean       @default(false)
  isFailed        Boolean       @default(false)
}

enum CampaignCategory {
  NO_CATEGORY
  SOCIAL_CAUSES
  HEALTH_AND_WELLNESS
  TECHNOLOGY_AND_INNOVATION
  ARTS_AND_CULTURE
  COMMUNITY_DEVELOPMENT
  EDUCATION_AND_LEARNING
  HUMAN_RIGHTS
  EMERGENCY_RELIEF
  SCIENCE_AND_RESEARCH
  SPORTS_AND_RECREATION
  BUSINESS_AND_ENTREPRENEURSHIP
  FOOD_AND_AGRICULTURE
  ELDERLY_CARE
  TECH_FOR_GOOD
  ENVIRONMENTAL_SUSTAINABILITY
}

model Contributer {
  id            Int      @id @default(autoincrement())
  name          String?
  walletAddress String   
  amount        String
  date          DateTime
  campaign      Campaign @relation(fields: [campaignId], references: [id])
  campaignId    Int
  isRefunded    Boolean @default(false)
}

model ContributerBlockChainScanIndex {
  id            Int @id @default(autoincrement())
  campaignId    Int @unique
  value         Int @default(0)
  creationDate  DateTime @default(now())
  updateDate    DateTime @default(now())
}

model Reward {
  id         Int      @id @default(autoincrement())
  name       String
  minAmount  String
  prize      String
  image      String?
  campaign   Campaign @relation(fields: [campaignId], references: [id])
  campaignId Int
}

model Owner {
  id            Int        @id @default(autoincrement())
  walletAddress String     @unique
  email         String
  campaigns     Campaign[]
}

enum CampaignType {
  Reward
  Donation
}
